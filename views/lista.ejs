<!doctype html>
<html>
  <head>
      <% include import.ejs %>
  </head>
  <body>
    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
      <% include header.ejs %>
      <main class="mdl-layout__content mdl-color--grey-100">
        <div class="mdl-grid demo-content">
            <div class="mdl-grid">
                <div class="mdl-layout-spacer"></div>
                    <section class="section--center mdl-grid mdl-shadow--4dp mdl-color--white">
                        
                        <ul class="demo-list-three mdl-list">
                            <% docs.forEach(function(customer){ %>
                                <li class="mdl-list__item mdl-list__item--three-line">
                                    <span class="mdl-list__item-primary-content">
                                        <i class="material-icons mdl-list__item-avatar">person</i>
                                        <span><%= customer.nome %></span>
                                        <span class="mdl-list__item-text-body">
                                            <%= customer._id %>
                                        </span>
                                    </span>
                                    <span class="mdl-list__item-secondary-content">
                                        <a class="mdl-list__item-secondary-action" href="/editar/<%= customer._id %>"><i class="mdl-color-text--blue-grey-400 material-icons" id="editar-default">edit</i></a>
                                        <a class="mdl-list__item-secondary-action" href="/delete/<%= customer._id %>" onclick="return confirm('Tem certeza que deseja excluir?');">
                                            <i class="mdl-color-text--blue-grey-400 material-icons" id="delete-default">delete</i>
                                        </a>
                                    </span>
                                </li>
                            <%})%>
                        </ul>
                    </section>
                <div class="mdl-layout-spacer"></div>
            </div>
        </div>
      </main>
    </div>
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  </body>
</html>

<!-- Three Line List with secondary info and action -->
<style>
.demo-list-three {
    width: 650px;
}

#editar-default:hover  {
    color:rgb(14, 13, 13) !important;
}

#delete-default:hover {
    color:rgb(14, 13, 13) !important;
}
</style>